@model FamilyMemberListVM

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">ಕುಟುಂಬ ಸದಸ್ಯರು</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6">
                <label>Employee Name: @Model.EmployeeName</label>
            </div>
            <div class="col-6 offset-6 text-end">
                <a asp-controller="FamilyMember" asp-action="Create" asp-route-employeeId="@Model.EmployeeId" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> ಕುಟುಂಬ ಸದಸ್ಯರ ಸೇರ್ಪಡೆ
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        ಹೆಸರು
                    </th>
                    <th>
                        ಸಂಬಂಧ
                    </th>
                    <th>
                        ವಯಸ್ಸು
                    </th>
                    <th>
                        ವಿಧ್ಯಾರ್ಹತೆ
                    </th>
                    <th>
                        ಅಗತ್ಯವಿರುವ ತರಬೇತಿ
                    </th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.FamilyMembers)
                {
                    <tr>
                        <td>@obj.FamilyMemberName</td>
                        <td>@obj.Relationship</td>
                        <td>@obj.Age</td>
                        <td>@obj.Education</td>
                        <td>@obj.RequiredTraining</td>
                        
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="FamilyMember" asp-action="Update" asp-route-familyMemberId="@obj.FamilyMemberId"
                                   class="btn btn-success mx-2">
                                    ಮಾರ್ಪಡಿಸು
                                </a>
                                <a asp-controller="FamilyMember" asp-action="Delete" asp-route-familyMemberId="@obj.FamilyMemberId"
                                   class="btn btn-danger mx-2">
                                    ಅಳಿಸು
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>